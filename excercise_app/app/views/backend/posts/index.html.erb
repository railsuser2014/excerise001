
<h1>search posts</h1>

<%= form_tag backend_posts_path, :method=> :get do%>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag  'Search' %>
<% end %>

<% if @posts.count > 0 %>
<h1> List of post  </h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', backend_post_path(post) %></td>
        <td><%= link_to 'Edit', edit_backend_post_path(post) %></td>
        <td><%= link_to 'Destroy', backend_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h1> No Record found for your search  <font color="red"> <%= "#{params[:search]}" %>  </font> </h1>
<%end %>

<br>

<%= link_to 'New Post', new_backend_post_path %>
