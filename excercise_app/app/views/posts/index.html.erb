<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post ', new_backend_post_path %> | 
<%= link_to('Login ', new_login_path) unless session[:author_id] %> |
<%= link_to('Log out ', logout_logins_path, :method => :delete) unless !session[:author_id] %>

<br>


